@page "/"

<PageTitle>Home</PageTitle>


@if (Goods is null)
{
    <h2>Loading ...</h2>
}
else
{   
    <h1 class="mb-5">Our Product</h1>

    <div class="container">
        
        @if (Goods.Count() > 0)
        {
            @foreach (var item in GetGroupGoodByCategoryId())
            {
                <hr class="mt-3">
                <h3 class="mt-3">@GetCategoryName(item)</h3>
                <div class="row mb-3">
                    <DisplayProduct Goods="@item.Take(4).ToList()"></DisplayProduct>
                </div> 
            }
        }
    </div>
}


